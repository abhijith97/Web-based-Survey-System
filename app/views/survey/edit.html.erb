<% provide(:title, 'Add Survey') %>
<h1>Add Survey</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
	<%= form_for(@survey) do |f| %>
		
		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control' %>


		<%= f.submit "Update survey", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>